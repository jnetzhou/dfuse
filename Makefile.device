LDFLAGS += -rdynamic

OBJ = $(SRC:.c=.o)
all:$(BIN)

VPATH := $(DFUSE_BASE)/src/

$(BIN):$(OBJ)
	$(CC) $^ -o $@ $(CFLAGS) $(LDFLAGS)

mrproper:
	rm -f df_device
